{
  "name": "generator-nullfactory-xrm",
  "version": "1.6.0",
  "description": "Dynamics CRM / 365 Project Structure Generator",
  "homepage": "http://www.nullfactory.net",
  "author": {
    "name": "Shane Carvalho",
    "email": "shanec_@hotmail.com",
    "url": "http://www.nullfactory.net"
  },
  "files": [
    "generators/app",
    "generators/gitignore",
    "generators/solution",
    "generators/cibuild"
  ],
  "main": "generators/index.js",
  "keywords": [
    "xrm",
    "crm",
    "dynamics crm",
    "dynamics 365",
    "yeoman-generator"
  ],
  "dependencies": {
    "chalk": "^2.3.1",
    "estraverse": "^4.2.0",
    "yeoman-generator": "^2.0.3",
    "yosay": "^2.0.1"
  },
  "devDependencies": {
    "coveralls": "^3.0.0",
    "eslint": "^4.18.1",
    "eslint-config-prettier": "^2.9.0",
    "eslint-config-xo": "^0.20.1",
    "eslint-plugin-prettier": "^2.6.0",
    "husky": "^0.14.3",
    "jest": "^22.4.2",
    "lint-staged": "^7.0.0",
    "nsp": "^3.2.1",
    "prettier": "^1.10.2",
    "yeoman-assert": "^3.1.0",
    "yeoman-test": "^1.7.0"
  },
  "jest": {
    "testEnvironment": "node"
  },
  "lint-staged": {
    "*.js": ["eslint --fix", "git add"],
    "*.json": ["prettier --write", "git add"]
  },
  "eslintConfig": {
    "extends": ["xo", "prettier"],
    "env": {
      "jest": true,
      "node": true
    },
    "rules": {
      "prettier/prettier": [
        "error",
        {
          "singleQuote": true,
          "printWidth": 90
        }
      ]
    },
    "plugins": ["prettier"]
  },
  "repository": "shanec-/generator-nullfactory-xrm",
  "scripts": {
    "prepublish": "nsp check",
    "pretest": "eslint .",
    "precommit": "lint-staged",
    "test": "jest --coverage"
  },
  "license": "GPL-3.0"
}
